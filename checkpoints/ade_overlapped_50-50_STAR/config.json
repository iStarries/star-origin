{
    "name": "STAR",
    "n_gpu": 2,
    "multiprocessing_distributed": true,
    "rank": 0,
    "world_size": 1,
    "dist_backend": "nccl",
    "dist_url": "tcp://127.0.0.1:12370",
    "seed": 1,
    "use_amp": true,
    "arch": {
        "type": "DeepLabV3",
        "args": {
            "output_stride": 16,
            "norm_act": "bn_sync",
            "backbone_pretrained": true,
            "freeze_all_bn": true
        }
    },
    "data_loader": {
        "type": "ADEIncrementalDataLoader",
        "args": {
            "task": {
                "name": "100-50",
                "step": 1,
                "setting": "overlap",
                "idxs_path": "./data/"
            },
            "train": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 0
                },
                "batch_size": 12
            },
            "val": {
                "cross_val": false,
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 255
                },
                "batch_size": 1
            },
            "test": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 255
                },
                "batch_size": 1
            },
            "num_workers": 4,
            "pin_memory": true,
            "memory": {
                "mem_size": 0
            }
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.00025,
            "weight_decay": 0.0001,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "hyperparameter": {
        "pos_weight": 30.0,
        "mbce": 1,
        "pkd": 5,
        "cont": 0.05
    },
    "lr_scheduler": {
        "type": "WarmupPolyLR",
        "args": {
            "warmup_iters": 0.2
        }
    },
    "evaluator": {
        "type": "Evaluator",
        "args": {}
    },
    "metrics": [
        "Pixel_Accuracy",
        "Pixel_Accuracy_Class",
        "Mean_Intersection_over_Union"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved_ade",
        "save_period": 10,
        "validation_period": 10,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": -1,
        "reset_best_mnt": false,
        "tensorboard": false
    },
    "test": false
}